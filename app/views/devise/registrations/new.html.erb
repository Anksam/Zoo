<div class="jumbotron">
  <h3 class="title-font-color">Create New Organization</h3>
  <hr>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group">
      <%= f.label :organization_name, class: 'title-font-color' %><br />
      <%= f.text_field :organization_name, autofocus: true, class: 'form-control regular-color' %>
    </div>

    <div class="form-group">
      <%= f.label :email, class: 'title-font-color' %><br />
      <%= f.email_field :email, autofocus: true, class: 'form-control regular-color' %>
    </div>

    <div class="form-group">
      <%= f.label :password, class: 'title-font-color' %>
      <% if @minimum_password_length %>
      <em class="regular-color">(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", class: 'form-control regular-color' %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, class: 'title-font-color' %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control regular-color' %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class: 'btn btn-default form-control title-font-color' %>
    </div>
  <% end %>

  <hr>
   <center><%= link_to "Already have an account? click here", new_organization_session_path, class: 'regular-color' %></center>
  <hr>
</div>
